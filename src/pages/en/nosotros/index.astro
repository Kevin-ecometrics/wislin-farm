---
import Layout from "@layouts/Layout.astro";
import Navbar from "@components/NavbarEN.astro";
import { t, changeLanguage } from "i18next";

changeLanguage("en");
---

<Layout title="WislinFarm - Nosotros">
  <main>
    <div>
      <Navbar />
      <hr class="border border-gray-300 mb-8" />
      <div class="container mx-auto w-4/6 px-8">
        <div class="flex flex-col">
          <h1 class="text-4xl font-bold text-center mb-16 text-red-600">
            {t("nosotros.title")}
          </h1>
          <p class="text-justify mb-16 font-Roboto font-normal text-2xl">
            {t("nosotros.subtitle")}
          </p>
          <p class="mb-8 font-Roboto font-normal text-justify text-2xl">
            {t("nosotros.parrafo")}
          </p>
        </div>
      </div>
    </div>
  </main>
</Layout>
