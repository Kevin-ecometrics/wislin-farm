---
import { t, changeLanguage } from "i18next";
import Layout from "@layouts/Layout.astro";
import Loading from "@components/Loading.astro";
import Navbar from "@components/Navbar.astro";
import Hero from "@components/Hero.astro";
import Acerca from "@components/Acerca.astro";
import Footer from "@components/Footer.astro";
import Product from "@components/Product.astro";
import Contact from "@components/Contact.astro";

changeLanguage("es");
---

<Layout title="WislinFarm">
  <Loading />
  <main class="w-screen">
    <div class="page-content" style="display: none;">
      <Navbar />
      <hr class="border border-gray-300" />
      <Hero />
      <Acerca />
      <hr class="border border-gray-300" />
      <div id="productos">
        <Product />
      </div>
      <hr class="border border-gray-300 mb-8" />
      <div id="nosotros" class="container mx-auto md:w-[90%] px-16">
        <div class="flex flex-col">
          <h1 class="text-4xl font-bold text-center mb-16 text-red-600">
            {t("nosotros.title")}
          </h1>
          <p class="text-justify mb-16 font-Roboto font-normal text-2xl">
            {t("nosotros.subtitle")}
          </p>
          <p class="mb-8 font-Roboto font-normal text-justify text-2xl">
            {t("nosotros.parrafo")}
          </p>
        </div>
      </div>
      <hr class="border border-gray-300" />
      <div id="contacto">
        <Contact />
      </div>
      <Footer />
    </div>
  </main>
</Layout>
