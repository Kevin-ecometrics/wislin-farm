---
import { Image } from "astro:assets";
import { t } from "i18next";
import About from "@assets/Acerca.png";
---

<section class="flex justify-center flex-col items-center mx-auto py-24 w-4/5">
  <h1
    class="text-4xl text-red-700 font-Roboto font-semibold mb-12 text-center md:text-center"
  >
    {t("hero.title")}
  </h1>
  <div class="grid grid-cols-1 md:grid-cols-2 px-8 gap-8 items-center">
    <div class="md:w-5/6">
      <h1 class="text-wrap text-xl text-justify font-Roboto font-normal">
        {t("hero.subtitle")}
      </h1>
    </div>
    <div>
      <Image src={About} alt="Acerca de nosotros" class="mx-auto rounded-lg" />
    </div>
  </div>
</section>
