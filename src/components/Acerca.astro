---
import { Image } from "astro:assets";
import { t } from "i18next";
import About from "@assets/Acerca.png";
---

<section class="flex justify-center flex-col items-center mx-auto py-24 w-4/5">
  <h1
    class="text-4xl text-red-700 font-semibold mb-12 text-center md:text-center"
  >
    {t("hero.title")}
  </h1>
  <div class="px-8 gap-8 items-center">
    <p class="text-center text-xl font-normal mb-8">
      {t("hero.subtitle")}
    </p>
    <div>
      <Image src={About} alt="Acerca de nosotros" class="mx-auto rounded-lg" />
    </div>
  </div>
</section>
