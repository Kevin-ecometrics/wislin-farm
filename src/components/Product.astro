---
import { t } from "i18next";
let images = [
  {
    class: t("productos.queso-panela"),
    info: t("productos.panela-info"),
    url: "/1. Tarjeta Panela.png",
    link: t("productos.panela-link"),
  },
  {
    class: t("productos.queso-oaxaca"),
    info: t("productos.oaxaca-info"),
    url: "/2. Tarjeta Oaxaca.png",
    link: t("productos.oaxaca-link"),
  },
  {
    class: t("productos.queso-seco"),
    info: t("productos.seco-info"),
    url: "/3. Tarjeta Cotija.png",
    link: t("productos.seco-link"),
  },
  {
    class: t("productos.queso-fresco"),
    info: t("productos.fresco-info"),
    url: "/5. Tarjeta Fresco (A).png",
    link: t("productos.fresco-link"),
  },
  {
    class: t("productos.queso-monterrey"),
    info: t("productos.monterrey-info"),
    url: "/6. Monterrey (A).png",
    link: t("productos.monterrey-link"),
  },
  {
    class: t("productos.chorizo"),
    info: t("productos.chorizo-info"),
    url: "/4. Tarjeta Chorizo.png",
    link: t("productos.chorizo-link"),
  },
  {
    class: t("productos.chorizo-mixto"),
    info: t("productos.chorizo-mixto-info"),
    url: "/7. Tarjeta Chorizo Mixto (A).png",
    link: t("productos.chorizo-mixto-link"),
  },
  {
    class: t("productos.chorizo-cerdo"),
    info: t("productos.chorizo-cerdo-info"),
    url: "/8. Tarjeta Chorizo Cerdo(A).png",
    link: t("productos.chorizo-cerdo-link"),
  },
];
---

<section class="md:w-[90%] mx-auto">
  <div class="py-8">
    <h1 class="text-center text-red-600 text-4xl mb-16 font-bold">
      {t("nav.productos")}
    </h1>
    <div class="flex flex-wrap justify-center gap-16">
      {
        images.map((image) => (
          <div class="myCard w-full md:w-1/2 lg:w-1/2 xl:w-1/2">
            <div class="innerCard">
              <div
                class="frontSide"
                style={`background-image: url('${image.url}'); background-size: cover; background-repeat: no-repeat; background-position: center;`}
              >
                {/* <p class="title uppercase">{image.class}</p> */}
              </div>
              <div class="backSide" style="background-color: #3e3e3e;">
                {" "}
                <p class="uppercase text-xl lg:text-base px-8 text-center">
                  {image.info}
                </p>
                <a
                  href={image.link}
                  class="mt-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
                >
                  {t("productos.button")}
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>

  <style>
    .myCard {
      background-color: transparent;
      width: 100%; /* Cambiado a 100% para ocupar todo el ancho del contenedor padre */
      height: 500px;
      max-width: 300px; /* Establece un ancho m√°ximo para que no se vuelva demasiado grande en pantallas grandes */
      perspective: 1000px;
      margin-bottom: 20px; /* Espaciado entre las tarjetas */
    }

    .title {
      font-size: 1.5em;
      font-weight: 900;
      text-align: center;
      margin: 0;
    }

    .innerCard {
      position: relative;
      width: 100%;
      height: 100%;
      text-align: center;
      transition: transform 0.8s;
      transform-style: preserve-3d;
      cursor: pointer;
    }

    .myCard:hover .innerCard {
      transform: rotateY(180deg);
    }

    .frontSide,
    .backSide {
      position: absolute;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: space-evenly;
      width: 100%;
      height: 100%;
      -webkit-backface-visibility: hidden;
      backface-visibility: hidden;
      border: 1px solid rgba(255, 255, 255, 0.8);
      border-radius: 1rem;
      color: white;
      box-shadow: 0 0 0.3em rgba(255, 255, 255, 0.5);
      font-weight: 700;
    }

    .backSide {
      transform: rotateY(180deg);
    }

    .frontSide::before,
    .backSide::before {
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      content: "";
      width: 110%;
      height: 110%;
      position: absolute;
      z-index: -1;
      border-radius: 1em;
      filter: blur(20px);
      animation: animate 5s linear infinite;
    }

    @keyframes animate {
      0% {
        opacity: 0.3;
      }

      80% {
        opacity: 1;
      }

      100% {
        opacity: 0.3;
      }
    }
  </style>
</section>
