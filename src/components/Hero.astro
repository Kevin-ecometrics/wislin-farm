---
import { Image } from "astro:assets";
import { t } from "i18next";
import HeroImage from "@assets/hero.webp";
---

<section class="w-full relative">
  <div class="absolute inset-0 bg-black opacity-50"></div>
  <Image
    src={HeroImage}
    class="w-full h-[400px] md:h-[800px]"
    alt="Hero-Element"
    title="Hero-element"
  />
  <div
    class="py-4 px-4 md:py-8 md:px-16 absolute top-0 left-0 w-full h-full flex flex-col justify-center items-center text-white"
  >
    <h1
      class="text-center underline text-white text-2xl md:text-4xl mb-4 md:mb-8 font-Roboto font-normal"
    >
      WislinFarm
    </h1>
    <p
      class="text-center text-white text-3xl md:text-7xl mb-4 md:mb-8 font-Roboto font-medium"
    >
      {t("hero.parrafo")}
    </p>
    <div class="flex justify-center items-center gap-2 md:gap-4">
      <button
        class="rounded-xl border px-6 py-2 md:px-12 md:py-4 hover:bg-red-700 font-Roboto font-medium"
      >
        {t("hero.productos")}
      </button>
      <button
        class="rounded-xl border px-6 py-2 md:px-12 md:py-4 hover:bg-red-700 font-Roboto font-medium"
      >
        {t("hero.servicios")}
      </button>
    </div>
  </div>
</section>
